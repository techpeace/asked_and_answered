= error_messages_for :question 

- remote_form_for :question, :url  => questions_path ,                    |
  :html => { :name => "question_form"},                                   |
  :loading  => "QuestionForm.disableForm();",                             |
  :complete => "QuestionForm.enableForm();" do |f|                        |
  
  .optional_field
    %label My question is...
    = f.text_area :question, :size => "35x35"

  .optional_field
    %label My name is...
    = f.text_field :child_name

  .optional_field
    %label My age is..
    = f.text_field :child_age, :size => 2

  .optional_field
    %label My city is...
    = f.text_field :child_city, :size => 15

  .optional_field
    %label My state is...
    = f.text_field :child_state, :size => 18 

  .optional_field
    %label My school is...
    = f.text_field :child_school 

  .optional_field
    %p If you'd like us to send you an email when we answer your question, enter it here...
    
  .optional_field
    %label Email address:
    = f.text_field :child_email  

  %br
  = submit_tag "Ask", :class => "button"
  = image_tag 'indicator.gif', :id => 'form_indicator', :style => "display: none; float: right; border: none; margin-top: -15px;"
